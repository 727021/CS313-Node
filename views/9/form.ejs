<!DOCTYPE html>
<html lang="en">
<head>
    <%include ../partials/head %>
</head>
<body>
    <%include ../partials/navbar %>
    <div class="container">
        <form action="/9/getRate" method="GET" class="container mt-2">
            <div class="row form-group">
                <div class="col-3 text-right"><label for="weight">Weight (oz):</label></div>
                <div class="col-9"><input type="number" name="weight" id="weight" class="form-control" min="0" max="13" step="0.1" value="1.0"></div>
            </div>
            <div class="row form-group">
                <div class="col-3 text-right"><label for="type">Type:</label></div>
                <div class="col-9">
                    <select name="type" id="type" class="form-control">
                        <option value="0" selected>Letters (Stamped)</option>
                        <option value="1">Letters (Metered)</option>
                        <option value="2">Large Envelopes (Flats)</option>
                        <option value="3">First-Class Package Service-Retail</option>
                    </select>
                </div>
            </div>
            <div class="row form-group">
                <div class="col-3 text-right"><label for="rate">Rate:</label></div>
                <div class="col-9"><input type="text" name="rate" id="rate" readonly class="form-control" value="$0.70"></div>
            </div>
            <div class="row form-group">
                <div class="col text-center">
                    <button id="getRate" type="button" class="btn btn-primary">Get Rate</button>
                </div>
            </div>
        </form>
    </div>
    <%include ../partials/scripts %>
    <script src="getRate.js"></script>
</body>
</html>