    <div class="container">
        <input class="form-control" type="text" name="search" id="search" placeholder="Search">
        <button class="btn btn-primary" id="searchButton">Search</button>

        <table class="table">
            <thead>
                <tr>
                    <th>Title</th>
                    <th>Link</th>
                </tr>
            </thead>
            <tbody id="list">
            </tbody>
        </table>
        <div class="row">
            <div class="col text-center" id="movieTitle"></div>
        </div>
        <div class="row">
            <div class="col text-right" id="moviePoster"></div>
            <div class="col text-left" id="moviePlot"></div>
        </div>
    </div>

